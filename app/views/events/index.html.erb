 <p> Upcoming Events</p>

<% @events.each do |event| %>
<% if event.event_date > Date.today %>

<%= link_to event.event_name, event%><br/>
<%= event.event_date%><br/>


<% end %>
<% end %><br/>

<p> Past Events</p>
<% @events.each do |event| %>
<% if event.event_date < Date.today %>

<%= link_to event.event_name, event%><br/>
<%= event.event_date%><br/>


<% end %>
<% end %><br/>



